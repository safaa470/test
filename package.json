{
  "name": "warehouse-management-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"wait-on http://127.0.0.1:5000/api/health && npm run client\"",
    "dev-simple": "npm run build && npm run server",
    "client": "vite --port 3000 --host 0.0.0.0",
    "server": "node server/index.cjs",
    "build": "vite build",
    "preview": "vite preview --port 3000 --host 0.0.0.0",
    "start": "npm run dev-simple",
    "seed": "node server/scripts/seed.cjs",
    "seed:fresh": "npm run seed"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "axios": "^1.6.2",
    "lucide-react": "^0.294.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "react-hot-toast": "^2.4.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.2"
  }
}